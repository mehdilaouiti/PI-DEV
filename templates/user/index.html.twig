{% include 'admin/admin.html.twig' %}
{% include 'admin/navbar.html.twig' %}
{% include 'admin/sidebar.html.twig' %}
{% block body %}


<div class="wrapper" >
    <div class="content-wrapper">
<div class="row">
    <div class="col-xl-3 col-sm-6 col-12 mb-4 mt-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between px-md-1">
                    <div class="align-self-center">
                        <i class="fas fa-users text-info fa-3x"></i>

                    </div>
                    <div class="text-end">
                        <h3>{{ stat.counts }}</h3>
                        <p class="mb-0">Users</p>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>name</th>
            <th>genre</th>
            <th>Email</th>
            <th>Roles</th>

            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.genre }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
                        {% if role == "ROLE_USER" %}
                            Utilisateur
                        {% elseif role == "ROLE_ADMIN" %}
                            Administrateur
                        {% endif %}
                    {% endfor %}
                </td>
                <td>
                    <button type="button" class="btn btn-info"><a href="{{ path('admin_user_show', {'id': user.id}) }}">afficher</a></button>
                    <button type="button" class="btn btn-warning"><a href="{{ path('admin_user_edit', {'id': user.id}) }}">modifier</a></button>
                    <button type="button" class="btn btn-danger"><a href="{{ path('admin_user_delete', {'id': user.id}) }}">supprimer</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    </div>
</div>

    {% endblock %}
