<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Votre Facture</title>

    <style type="text/css">
        * {
            font-family: Verdana, Arial, sans-serif;
        }
        table{
            font-size: x-small;
        }
        tfoot tr td{
            font-weight: bold;
            font-size: x-small;
        }
        .gray {
            background-color: lightgray
        }
    </style>

</head>

<body>

<table width="100%">
    <tr>
        <td valign="top"><a href="{{ path('article')}}" class="btn">GO BACK</a></td>
        <td align="right">
            <h3>Shinra Electric power company</h3>
            <pre>
                Company representative name
                Company address
                Tax ID
                phone
                fax
            </pre>
        </td>
    </tr>

</table>

<table width="100%">
    <tr>
        <td><strong>From:</strong> Linblum - Barrio teatral</td>
        <td><strong>To:</strong> Linblum - Barrio Comercial</td>
    </tr>

</table>

<br/>

<table width="100%">
    <thead style="background-color: lightgray;">
    <tr>
        <th>#</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Unit Price $</th>
        <th>Total $</th>
    </tr>
    </thead>
    <tbody>
    {% set n = 1 %}
    {% for c in panier %}
    <tr>
        <th scope="row">{{ n }}</th>
        <td>{{ c.produit.description}}</td>
        <td align="right">{{ c.quantite}}</td>
        <td align="right">{{ c.produit.prix}}</td>
        <td align="right">{{ c.prixtotal }}</td>
    </tr>
    {% set n = n+1 %}
    {% endfor%}

    <tr>
    <tr>
        <td colspan="3"></td>
        <td align="right">Subtotal DT</td>
        <td align="right">{{ total }}</td>
    </tr>
    <tr>
        <td colspan="3"></td>
        <td align="right">Tax DT</td>
        <td align="right">{{ subtotal }}</td>
    </tr>
    <tr>
        <td colspan="3"></td>
        <td align="right">Total DT</td>
        <td align="right" class="gray">{{ totalnet }}</td>

    </tr>
    <tr>
        <td colspan="3"></td>

        <td align="right"><a href="{{ path('imprimer_facture')}}" class="btn">IMPRIME FACTURE</a></td>
    </tr>

    </tfoot>
</table>


</body>
</html>