{% extends 'base.html.twig' %}
{% block body %}

    <div class="container" onload="updateDB();">
        <div class="row">
            <div class="col-md-3">
                {% include 'article/catform.html.twig' with {form: form} only %}
            </div>
            <div class="col-md-9">
                <div class="d-flex justify-content-end mb-2" >
                    {{ knp_pagination_sortable(art,'Nom', 'p.nom') }}
                    {{ knp_pagination_sortable(art,'Prix', 'p.prix') }}

                </div>
                <div class="grid">
                    {% for a in art %}
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="product-grid">
                                    <div class="product-image">
                                        <a href="#" class="image">
                                            <img class="pic-1" src="{{ asset(''~a.img~'') }}">
                                        </a>
                                        <ul class="product-links">
                                            <li><a href="{{ path('ajout_favoris',{'id':a.id}) }}" data-tip="j'ajoute au favoris!"><i class="fa fa-heart"></i></a></li>
                                            <li><a href="{{ path('art',{'id':a.id}) }}" data-tip="je decouvre!"><i class="fa fa-eye"></i></a></li><br>
                                        </ul>
                                    </div>
                                    <div class="product-content">
                                        <h3 class="title"><a href="#">{{ a.nom }}</a></h3>
                                        <div class="price"><span></span> {{ a.prix }} DT</div>
                                        <button id="add-to-cart" onclick="add({{ a.id }})" class="add-to-cart">
                                            <a >Ajoutez au panier</a>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="mt-4">
                    {{ knp_pagination_render(art) }}
                </div>
            </div>
        </div>
    </div>

   <script>
       window.onload = function() {
           add(0);
       }
   </script>


