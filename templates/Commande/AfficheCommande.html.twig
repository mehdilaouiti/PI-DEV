{% include 'admin/admin.html.twig' %}
{% include 'admin/navbar.html.twig' %}
{% include 'admin/sidebar.html.twig' %}
{% block body %}


    <div class="wrapper" >
        <div class="content-wrapper">
            <div class="container">
                <div class="row">


                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-12">
                                <div class="section-title">
                                    <h2 align="center">Liste des commandes</h2>
                                </div>
                            </div>
                        </div>





                    <div class="table-responsive">


                        <table id="mytable" class="table table-bordred table-striped">

                            <thead>
                            <th>ID Commande</th>
                            <th>Prix Total</th>
                            <th>Adresse</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Numero</th>

                            </thead>
                            <tbody>
                            {% for com in commande %}
                                <tr>
                                    <td>{{ com.id }}</td>
                                    <td>{{ com.prixTotal }}DT</td>
                                    <td>{{ com.adresse }}</td>
                                    <td>{{ com.nom }}</td>
                                    <td>{{ com.prenom }}</td>
                                    <td>{{ com.numeroTelephone }}</td>

                                </tr>
                            {% endfor %}
                            </tbody>

                        </table>

                        </div>

                </div>
            </div>
        </div>
    </div>


{% endblock %}